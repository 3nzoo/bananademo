    "express-fileupload": "^1.1.6",
    "gravatar": "^1.6.0",
    "jade": "^1.11.0",
    "jsonwebtoken": "^8.2.0",
    "mongoose": "^5.4.17",
    "nodemailer": "^6.4.6",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^9.4.1"
